<div class="row" rbs-document-editor-base="" model="Rbs_Website_FunctionalPage">

	<div class="col-md-12">
		<rbs-page-header document="document" sub-title="{{ i18nAttr(modelKey('Rbs_Website_FunctionalPage'), ['ucf']) }}"></rbs-page-header>
	</div>

	<div data-rbs-aside-column="">
		{% include '@Rbs_Admin/view/asides.twig' %}

		<div class="panel panel-default" id="rbsWebsitePageBlockPropertiesAside" style="display: none;">
			<div class="panel-heading">
				<h3 class="panel-title">{{ i18n('m.rbs.website.admin.block_properties', ['ucf']) }}</h3>
			</div>
			<div class="panel-body">
				<div id="rbsStructureEditorBlockPropertiesPopup"
					data-no-block-text="{{ i18nAttr('m.rbs.website.admin.no_block_selected', ['ucf']) }}"
					data-edit-in-content="{{ i18nAttr('m.rbs.website.admin.edit_in_content', ['ucf']) }}">
					{{ i18n('m.rbs.website.admin.no_block_selected', ['ucf']) }}
				</div>
			</div>
		</div>

		{% include '@Rbs_Admin/view/links.twig' %}
	</div>

	<div class="document-form" rbs-main-column>

		<form ng-submit="submit()" rbs-document-editor-edit="" rbs-document-editor-rbs-website-functionalpage="">

			<fieldset rbs-editor-section=""
			          data-editor-section-label="{{ i18nAttr('m.rbs.admin.admin.general_properties', ['ucf']) }}">

				<rbs-field-picker property="website" required="true" label="{{ i18nAttr(propertyKey('Rbs_Website_FunctionalPage', 'website'), ['ucf']) }}"
					accepted-model="Rbs_Website_Website"
					selector-title="{{ i18nAttr('m.rbs.website.admin.functionalpage_website_picker_title', ['ucf']) }}">
					<span class="help-block">{{ i18n('m.rbs.website.admin.functionalpage_website_picker_title', ['ucf']) }}</span>
				</rbs-field-picker>

				<hr />

				<rbs-field-label-title property="title" required="true"
				                       label="{{ i18nAttr(propertyKey('Rbs_Website_FunctionalPage', 'label'), ['ucf']) }} / {{ i18nAttr(propertyKey('Rbs_Website_FunctionalPage', 'title'), ['ucf']) }}">
				</rbs-field-label-title>

				<rbs-field-document-select
					label="{{ i18nAttr(propertyKey('Rbs_Website_FunctionalPage', 'pageTemplate'), ['ucf']) }}"
					empty-label="{{ i18nAttr('m.rbs.website.admin.page_empty_pagetemplate', ['ucf']) }}"
					required="true" property="pageTemplate" ng-model="document.pageTemplate"
					accepted-model="Rbs_Theme_Template" filter-property="mailSuitable" filter-value="0">
				</rbs-field-document-select>

				<div rbs-tip="Rbs_Website_FunctionalPageEditorFunctions">
					{{ i18n('m.rbs.website.admin.functional_page_editor_help') | raw }}
				</div>

				<hr />

				<rbs-field-boolean property="useCache"
						label="{{ i18nAttr(propertyKey('Rbs_Website_FunctionalPage', 'useCache'), ['ucf']) }}">
				</rbs-field-boolean>

				<div data-ng-show="document.useCache">
					<rbs-field property="TTL" label="{{ i18nAttr(propertyKey('Rbs_Website_FunctionalPage', 'TTL'), ['ucf']) }}">
						<input class="form-control" size="7" rbs-smart-float="" ng-model="document.TTL" min="0" type="number" />
						<span class="help-block">{{ i18n('m.rbs.website.admin.staticpage_ttl_help') }}</span>
					</rbs-field>
				</div>
			</fieldset>

			<fieldset rbs-editor-section="content"
				data-editor-section-label="{{ i18nAttr(propertyKey('Rbs_Website_FunctionalPage', 'editableContent'), ['ucf']) }}"
				data-editor-section-icon="icon-align-left">
				<rbs-structure-editor name="contents" ng-model="document.editableContent" template="(=pageTemplate=)">
				</rbs-structure-editor>
			</fieldset>

			<fieldset rbs-editor-section="systeminfo"
				data-editor-section-label="{{ i18nAttr('m.rbs.admin.admin.status', ['ucf']) }}"
				data-rbs-document-system-info-section="">
			</fieldset>

			<rbs-document-editor-button-bar></rbs-document-editor-button-bar>

		</form>

	</div>

</div>